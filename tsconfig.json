{
    "compilerOptions": {
        "module": "ES6",
        "outDir": "dist",
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowJs": false,
        "rootDirs": [
            "src"
        ],
        "baseUrl": "src",
        "moduleResolution": "node",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src"
    ]
}